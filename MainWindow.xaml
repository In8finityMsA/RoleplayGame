<Window x:Class="KashTaskWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KashTaskWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Orientation="Vertical">
            <Border BorderBrush="Black" BorderThickness="5" VerticalAlignment="Top"
                Padding="10" CornerRadius="10">
                <TextBlock x:Name="textBlock">
                        1) Hit <LineBreak/>
                        2) Spell <LineBreak/>
                        3) Artifact <LineBreak/>
                        4) Speak <LineBreak/>
                        5) Run
                </TextBlock>
            </Border>
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,10">
                <UniformGrid x:Name="grid" Rows="1" Columns="5">
                    <Button MinHeight="50" MinWidth="50" Tag="0" Click="Button_Click">1</Button>
                    <Button Tag="1" Click="Button_Click">2</Button>
                    <Button Tag="2" Click="Button_Click">3</Button>
                    <Button Tag="3" Click="Button_Click">4</Button>
                    <Button Tag="4" Click="Button_Click">5</Button>
                </UniformGrid>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
